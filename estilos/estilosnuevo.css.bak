/* ESTILO DEL MENU Y SUBMENU */

* {
	font-family: sans-serif;
	list-style: none;
	text-decoration: none;
	margin: 0;
	padding: 0;
	
}
.nav > li {
	float: left;
}
.nav li a {
	background: #990033;
	color: #FFF;
	display: block;
	border: 1px solid;
	padding: 10px 12 px;
}
.nav li a:hover {
	background: #0fbfc6;
}
.nav li ul {
	display: none;
	position: absolute;
	min-width: 140px;
}
.nav li:hover > ul {
	display: block;
}
.nav li ul li {
	position: relative;
}
.nav li ul li ul {
	right: -140px;
	top: 0;
}
.nav li .flecha {
	font-size: 9px;
	padding-left: 6px;
	display: none;
}
.nav li a:not(:last-child) .flecha  {
	display: inline;
}
